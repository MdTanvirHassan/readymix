RewriteEngine On
RewriteCond %{REQUEST_URI} !^.*/templates/.*/js/.*$
RewriteCond %{REQUEST_URI} !^.*/templates/.*/css/.*$
RewriteCond %{REQUEST_URI} !^.*/templates/.*/images/.*$
RewriteRule ^(.*)$ /index.php/$1 [L]

<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|xml|gz)$">
    Header append Vary Accept-Encoding
  </FilesMatch>
</IfModule>